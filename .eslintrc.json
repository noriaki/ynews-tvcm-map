{
  "env": {
    "browser": true,
    "node":    true,
    "es6":     true,
    "jquery":  true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "strict": [2, "function"],
    "no-var": 2,
    "no-undef": 2,
    "no-console": 0,
    "no-sparse-arrays": 0,
    "arrow-parens": [2, "always"],
    "prefer-const": 2,
    "semi": [2, "always"]
  }
}
